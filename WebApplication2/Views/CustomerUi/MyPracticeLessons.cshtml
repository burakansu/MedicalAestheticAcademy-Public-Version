@{
    Layout = null;
    int CookieCustomerId = MetaData.baseCustomerId();
    List<PracticeLesson> practiceLessons = new List<PracticeLesson>();
    var pls = MetaData.basePracticeLesson().ToList();

    if (MetaData.baseCustomerPracticeLessonRelation().Where(x => x.CustomerId == CookieCustomerId).Count() > 0)
    {
        var relations = MetaData.baseCustomerPracticeLessonRelation().Where(x => x.CustomerId == CookieCustomerId).Select(x => x.PracticeLessonId).ToList();
        foreach (var id in relations)
        {
            PracticeLesson pl = pls.Single(x => x.PracticeLessonId == id);
            if (practiceLessons.Count() > 0)
            {
                if (!practiceLessons.Any(x => x.PracticeLessonId == id))
                    practiceLessons.Add(pl);
            }
            else
            {
                practiceLessons.Add(pl);
            }
        }
    }
    int first = 0;
}

<div class="content">

    <div class="section-title">
        <h4 class="rbt-title-style-3">
            Pratik Derslerim
        </h4>
    </div>

    <div class="row g-5">


        @foreach (var item in practiceLessons)
        {
            <!-- Start Single Course  -->
            <div class="col-lg-4 col-md-6 col-12">
                <div class="rbt-card variation-01 rbt-hover">
                    <div class="rbt-card-img">
                        <a>


                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">


                                    @foreach (var image in item.PracticeLessonGallery)
                                    {
                                        @if (first == 0)
                                        {
                                            <div class="carousel-item active">
                                                <img class="d-block w-100" src="@MetaData.baseAssetsPath()/PracticeLesson/@image.Image">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="@MetaData.baseAssetsPath()/PracticeLesson/@image.Image">
                                            </div>
                                        }

                                        first = 1;
                                    }

                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>


                        </a>
                    </div>
                    <div class="rbt-card-body">
                        <div class="rbt-card-top">
                            <div class="rbt-review">
                                <span class="rating-count">@item.Description</span>
                            </div>
                            <div class="rbt-bookmark-btn">
                            </div>
                        </div>
                        <h4 class="rbt-card-title">
                            <a>@item.Name</a>
                        </h4>
                        <ul class="rbt-meta">
                            <li><i class="feather-clock"></i>Tarih (@item.Date.ToString("dd/MM/yyyy"))</li>
                        </ul>

                        <div class="rbt-card-bottom">
                            <div class="rbt-price">
                                <span class="current-price">
                                    @item.PackagePracticeLessonRelation.FirstOrDefault()?.Package.Price
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Single Course  -->
        }


    </div>
</div>

