@model List<Course>
@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    int adet = Convert.ToInt32(pager.PageSize);
    string orderIcon = pager.OrderWay == "Asc" ? "fa-solid fa-caret-up" : "fa-solid fa-caret-down";
}
<style>
    .orderIcon {
        display: inline-block;
        position: relative;
        right: -10px;
        line-height: 0;
        vertical-align: middle;
        font-size: 1.1rem;
        color: black !important;
    }

    .sortable {
        cursor: pointer;
    }
</style>



<!--begin::Table-->
<div class="table-responsive">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered mb-200">
            <thead>
                <tr>
                    <th style="width:50px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="PagerTopluSecim" />
                        </div>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="CourseId">
                        # <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Id"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Adı <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Name"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Açıklama <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Description"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Kategori <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="CategoryId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Eğitmenler <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="LecturerId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Uzmanlık Alanları <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="ProfessionId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Beceriler <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="SkillId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Ücret <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Price"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Dersler <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="LessonId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Fragmanlar <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="TrailerId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Video <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Source"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Süre <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Duration"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Sıra <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Sira"?"":"display:none;")"></i>
                    </th>
                    

                    <th scope="col" style="width:65px;">durum</th>
                    <th scope="col" style="width:75px;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input pager_toplu_secim" type="checkbox" value="@item.CourseId" />
                            </div>
                        </td>

                        <td>@item.CourseId</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Category.Name</td>

                        <td>
                            <ul>
                                @foreach (var lec in item.LecturerCourseRelation.Select(i => i.Lecturer))
                                {
                                    @Html.Raw("<li>"+ lec.Name +"</li>")
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var pro in item.ProfessionCourseRelation.Select(i => i.Profession))
                                {
                                    @Html.Raw("<li>"+ pro.Name +"</li>")
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var skill in item.SkillCourseRelation.Select(i => i.Skill))
                                {
                                    @Html.Raw("<li>"+ skill.Name +"</li>")
                                }
                            </ul>
                        </td>

                        <td>@item.Price @item.Currency.Name</td>

                        <td>
                            <ul>
                                @foreach (var les in item.Lesson)
                                {

                                    @Html.Raw("<li>"+ les.Name +"</li>")
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var trl in item.Trailer)
                                {

                                    @Html.Raw("<li>"+ trl.Name +"</li>")
                                }
                            </ul>
                        </td>


                        <td><a target="_blank" href="@item.Source">İzle</a></td>
                        <td>@item.Lesson.Sum(x=> x.Duration) dk</td>
                        <td>@item.Sira</td>

                        <td>
                            <div class="badge badge-light-@(item.Aktif ? "success" : "danger")">
                                @(item.Aktif ? "Aktif" : "Pasif")
                            </div>
                        </td>
                        <!--begin::Action=-->
                        <td>
                            <!-- Example single danger button -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    İşlemler
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-action="Detail" asp-controller="Course" asp-route-id="@item.CourseId">Detay</a>
                                        <a class="dropdown-item" event="CourseFormPopup" params='{"id":"@item.CourseId"}' href="#">Düzenle</a>
                                        <a class="dropdown-item" event="BaseDurum" params='{"id":@item.CourseId, "url":"/Course/durum", "title":"@(item.Aktif?"Pasif Yap":"Aktif Yap")"}' href="#">
                                            @(item.Aktif ? "Pasif Yap" : "Aktif Yap")
                                        </a>
                                        <a class="dropdown-item" event="BaseSil" params='{"id":@item.CourseId, "url":"/Course/sil", "title":"Sil"}' href="#">
                                            Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <!--end::Action=-->
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning">
            kayıt bulunamadı
        </div>
    }
</div>

@Html.Partial("/views/shared/_pager.cshtml",pager)

<!--end::Table-->
