@model List<Review>
@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    int adet = Convert.ToInt32(pager.PageSize);
    string orderIcon = pager.OrderWay == "Asc" ? "fa-solid fa-caret-up" : "fa-solid fa-caret-down";
    string a = "";
}
<style>
    .orderIcon {
        display: inline-block;
        position: relative;
        right: -10px;
        line-height: 0;
        vertical-align: middle;
        font-size: 1.1rem;
        color: black !important;
    }

    .sortable {
        cursor: pointer;
    }
</style>



<!--begin::Table-->
<div class="table-responsive">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered mb-200">
            <thead>
                <tr>
                    <th style="width:50px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="PagerTopluSecim" />
                        </div>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="ReviewId">
                        # <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Id"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Kurs Adı <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Name"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Ders Adı <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Name"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Description">
                        Müşteri Adı <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Description"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Course">
                        İçerik <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="CourseId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Package" style="width:110px;">
                        Derece <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="PackageId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Package" style="width:65px;">
                        Onay<i class="@orderIcon orderIcon" style="@(pager.OrderBy=="PackageId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Sira" style="width:130px;">
                        Tarih <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Sira"?"":"display:none;")"></i>
                    </th>


                    <th scope="col" style="width:65px;">durum</th>
                    <th scope="col" style="width:75px;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input pager_toplu_secim" type="checkbox" value="@item.ReviewId" />
                            </div>
                        </td>

                        <td>@item.ReviewId</td>
                        <td>@item.Lesson.Course.Name</td>
                        <td>@item.Lesson.Name</td>
                        <td>@item.Customer.NameSurname</td>
                        <td>@item.Description</td>
                        <td>

                            @for (int j = 1; j <= item.StarRate; j++)
                            {
                                <span class="fa fa-star checked"></span>
                            }

                        </td>
                        <td>
                            @if (item.Approved == true)
                            {
                                a = "Onaylandı";
                            }
                            else
                            {
                                a = "Onaylanmadı";
                            }

                            @switch (a)
                            {
                                case "Onaylandı":
                                    <a class="btn btn-primary btn-sm">✓</a>
                                    break;
                                case "Onaylanmadı":
                                    <a class="btn btn-secondary btn-sm">X</a>
                                    break;
                            }

                        </td>
                        <td><div class="mx-auto" style="width:74px;">@item.EklemeTarihi</div></td>

                        <td>
                            <div class="badge badge-light-@(item.Aktif ? "success" : "danger")">
                                @(item.Aktif ? "Aktif" : "Pasif")
                            </div>
                        </td>
                        <!--begin::Action=-->
                        <td>
                            <!-- Example single danger button -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    İşlemler
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" event="BaseDurum" params='{"id":@item.ReviewId, "url":"/Reviews/Approved", "title":"@(item.Approved?"Onaylama":"Onayla")"}' href="#">
                                            @(item.Approved ? "Onaylama" : "Onayla")
                                        </a>
                                        <a class="dropdown-item" event="BaseDurum" params='{"id":@item.ReviewId, "url":"/Reviews/durum", "title":"@(item.Aktif?"Pasif Yap":"Aktif Yap")"}' href="#">
                                            @(item.Aktif ? "Pasif Yap" : "Aktif Yap")
                                        </a>
                                        <a class="dropdown-item" event="BaseSil" params='{"id":@item.ReviewId, "url":"/Reviews/sil", "title":"Sil"}' href="#">
                                            Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <!--end::Action=-->
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning">
            kayıt bulunamadı
        </div>
    }
</div>

@Html.Partial("/views/shared/_pager.cshtml",pager)

<!--end::Table-->
