@model List<Advisor>
@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    int adet = Convert.ToInt32(pager.PageSize);
    string orderIcon = pager.OrderWay == "Asc" ? "fa-solid fa-caret-up" : "fa-solid fa-caret-down";
    string typestring = "";
}
<style>
    .orderIcon {
        display: inline-block;
        position: relative;
        right: -10px;
        line-height: 0;
        vertical-align: middle;
        font-size: 1.1rem;
        color: black !important;
    }

    .sortable {
        cursor: pointer;
    }
</style>



<!--begin::Table-->
<div class="table-responsive">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered mb-200">
            <thead>
                <tr>
                    <th style="width:50px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="PagerTopluSecim" />
                        </div>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="AdvisorId">
                        # <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Id"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Adı <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Name"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Tip <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Name"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Course">
                        Bitmesi Gereken Kurslar <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="CourseId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Package">
                        Bağlı Paketler <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="PackageId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Package">
                        Ücret <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="PackageId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Package">
                        Para Birimi <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="PackageId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Package">
                        Eğitmen <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="PackageId"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Sira">
                        Sıra <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Sira"?"":"display:none;")"></i>
                    </th>


                    <th scope="col" style="width:65px;">durum</th>
                    <th scope="col" style="width:75px;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input pager_toplu_secim" type="checkbox" value="@item.AdvisorId" />
                            </div>
                        </td>

                        <td>@item.AdvisorId</td>
                        <td>@item.Name</td>
                        @{
                            if (item.Type == 1)
                            {
                                typestring = "Şeffaf Plak Danışmanlığı";
                            }
                            if (item.Type == 2)
                            {
                                typestring = "Vaka Danışmanlığı";
                            }
                        }
                        <td>
                            @typestring
                        </td>



                        <td>
                            <ul>
                                @foreach (var lec in item.AdvisorCourseRelation.Select(i => i.Course))
                                {
                                    @Html.Raw("<li>"+ lec.Name +"</li>")
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var pro in item.PackageAdvisorRelation.Select(i => i.Package))
                                {
                                    @Html.Raw("<li>"+ pro.Name +"</li>")
                                }
                            </ul>
                        </td>

                        <td>@item.Price</td>
                        <td>@item.Currency.Name</td>

                        <td>
                            <ul>
                                @foreach (var pro in MetaData.baseLecturer().Where(x => x.LecturerId == item.LecturerId))
                                {
                                    @Html.Raw("<li>"+ pro.Name +"</li>")
                                }
                            </ul>
                        </td>


                        <td>@item.Sira</td>

                        <td>
                            <div class="badge badge-light-@(item.Aktif ? "success" : "danger")">
                                @(item.Aktif ? "Aktif" : "Pasif")
                            </div>
                        </td>
                        <!--begin::Action=-->
                        <td>
                            <!-- Example single danger button -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    İşlemler
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        @*<a class="dropdown-item" asp-action="Detail" asp-controller="Advisor" asp-route-id="@item.AdvisorId">Detay</a>*@
                                        <a class="dropdown-item" asp-action="Message" asp-controller="Advisor" asp-route-id="@item.AdvisorId">Sohbetler</a>
                                        <a class="dropdown-item" event="AdvisorFormPopup" params='{"id":"@item.AdvisorId"}' href="#">Düzenle</a>
                                        <a class="dropdown-item" event="BaseDurum" params='{"id":@item.AdvisorId, "url":"/Advisor/durum", "title":"@(item.Aktif?"Pasif Yap":"Aktif Yap")"}' href="#">
                                            @(item.Aktif ? "Pasif Yap" : "Aktif Yap")
                                        </a>
                                        <a class="dropdown-item" event="BaseSil" params='{"id":@item.AdvisorId, "url":"/Advisor/sil", "title":"Sil"}' href="#">
                                            Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <!--end::Action=-->
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning">
            kayıt bulunamadı
        </div>
    }
</div>

@Html.Partial("/views/shared/_pager.cshtml",pager)

<!--end::Table-->
