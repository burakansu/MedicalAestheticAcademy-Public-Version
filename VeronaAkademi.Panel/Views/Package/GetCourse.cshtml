@model List<Course>
@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    int adet = Convert.ToInt32(pager.PageSize);
    string orderIcon = pager.OrderWay == "Asc" ? "fa-solid fa-caret-up" : "fa-solid fa-caret-down";
}
<style>
    .orderIcon {
        display: inline-block;
        position: relative;
        right: -10px;
        line-height: 0;
        vertical-align: middle;
        font-size: 1.1rem;
        color: black !important;
    }

    .sortable {
        cursor: pointer;
    }
</style>



<!--begin::Table-->
<div class="table-responsive">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered mb-200">
            <thead>
                <tr>
                    <th style="width:50px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="PagerTopluSecim" />
                        </div>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="CourseId">
                        # <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Id"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Adı <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Name"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Açıklama <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Description"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Başlama Tarihi <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Description"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Bitiş Tarihi <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Description"?"":"display:none;")"></i>
                    </th>

                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Sıra <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Sira"?"":"display:none;")"></i>
                    </th>


                    <th scope="col" style="width:65px;">durum</th>
                    <th scope="col" style="width:75px;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input pager_toplu_secim" type="checkbox" value="@item.CourseId" />
                            </div>
                        </td>

                        <td>@item.CourseId</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            @if (item.PackageCourseRelation.Count > 0)
                            {
                                var i = @item.PackageCourseRelation.First();
                                <form id="startdate">
                                    <input type="hidden" class="packageCourseRelationId" value="@i.PackageCourseRelationId">
                                    <input type="hidden" class="packageId" value="@i.PackageId">
                                    <input type="hidden" class="courseId" value="@i.CourseId">
                                    <input type="hidden" class="finishDate" value="@i.FinishDate.ToString("yyyy-MM-dd")">
                                    <input class="form-control startDateInput" type="date" value="@i.StartDate.ToString("yyyy-MM-dd")">
                                </form>
                            }
                        </td>
                        <td>
                            @if (item.PackageCourseRelation.Count > 0)
                            {
                                var i = @item.PackageCourseRelation.First();
                                <form id="finishdate">
                                    <input type="hidden" class="packageCourseRelationId" value="@i.PackageCourseRelationId">
                                    <input type="hidden" class="packageId" value="@i.PackageId">
                                    <input type="hidden" class="courseId" value="@i.CourseId">
                                    <input type="hidden" class="startDate" value="@i.StartDate">
                                    <input class="form-control finishDateInput" type="date" value="@i.FinishDate.ToString("yyyy-MM-dd")">
                                </form>
                            }
                        </td>


                        <td>@item.Sira</td>

                        <td>
                            <div class="badge badge-light-@(item.Aktif ? "success" : "danger")">
                                @(item.Aktif ? "Aktif" : "Pasif")
                            </div>
                        </td>
                        <!--begin::Action=-->
                        <td>
                            <!-- Example single danger button -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    İşlemler
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-action="Detail" asp-controller="Course" asp-route-id="@item.CourseId">Detay</a>
                                        <a class="dropdown-item" event="CourseFormPopup" params='{"id":"@item.CourseId"}' href="#">Düzenle</a>
                                        <a class="dropdown-item" event="BaseDurum" params='{"id":@item.CourseId, "url":"/Course/durum", "title":"@(item.Aktif?"Pasif Yap":"Aktif Yap")"}' href="#">
                                            @(item.Aktif ? "Pasif Yap" : "Aktif Yap")
                                        </a>
                                        <a class="dropdown-item" event="BaseSil" params='{"id":@item.CourseId, "url":"/Course/sil", "title":"Sil"}' href="#">
                                            Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <!--end::Action=-->
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning">
            kayıt bulunamadı
        </div>
    }
</div>

@Html.Partial("/views/shared/_pager.cshtml",pager)

<!--end::Table-->
<script>
    $(document).ready(function () {
        $('#startdate .startDateInput').each(function () {
            var startDate = $(this).val();
            var finishDate = $(this).siblings('.finishDate').val();
            $(this).val(startDate);
        });

        $('#finishdate .finishDateInput').each(function () {
            var startDate = $(this).siblings('.startDate').val();
            var finishDate = $(this).val();
            $(this).val(finishDate);
        });
    });
</script>