@model List<Profession>
@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    int adet = Convert.ToInt32(pager.PageSize); string orderIcon = pager.OrderWay == "Asc" ? "fa-solid fa-caret-up" : "fa-solid fa-caret-down";
}

<style>
    .orderIcon {
        display: inline-block;
        position: relative;
        right: -10px;
        line-height: 0;
        vertical-align: middle;
        font-size: 1.1rem;
        color: black !important;
    }

    .sortable {
        cursor: pointer;
    }
</style>



<!--begin::Table-->
<div class="table-responsive">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered mb-200">
            <thead>
                <tr>
                    <th style="width:50px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="PagerTopluSecim" />
                        </div>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="ProfessionId">
                        # <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Id"?"":"display:none;")"></i>
                    </th>
                    <th scope="col" class="sortable" event="sortable" order="Name">
                        Adı <i class="@orderIcon orderIcon" style="@(pager.OrderBy=="Name"?"":"display:none;")"></i>
                    </th>
                    <th scope="col">Sıra</th>

                    <th scope="col" style="width:65px;">durum</th>
                    <th scope="col" style="width:75px;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input pager_toplu_secim" type="checkbox" value="@item.ProfessionId" />
                            </div>
                        </td>
                        <td scope="row">@item.ProfessionId</td>
                        <td>@item.Name</td>
                        <td>@item.Sira</td>

                        <td>
                            <div class="badge badge-light-@(item.Aktif ? "success" : "danger")">
                                @(item.Aktif ? "Aktif" : "Pasif")
                            </div>
                        </td>
                        <!--begin::Action=-->
                        <td>
                            <!-- Example single danger button -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    İşlemler
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" event="ProfessionFormPopup" params='{"id":"@item.ProfessionId"}' href="#">Düzenle</a>
                                        <a class="dropdown-item" event="ProfessionImageFormPopup" params='{"id":"@item.ProfessionId"}' href="#">Resim Ekle</a>
                                        <a class="dropdown-item" event="BaseDurum" params='{"id":@item.ProfessionId, "url":"/Profession/durum", "title":"@(item.Aktif?"Pasif Yap":"Aktif Yap")"}' href="#">
                                            @(item.Aktif ? "Pasif Yap" : "Aktif Yap")
                                        </a>
                                        <a class="dropdown-item" event="BaseSil" params='{"id":@item.ProfessionId, "url":"/Profession/sil", "title":"Sil"}' href="#">
                                            Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <!--end::Action=-->
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning">
            kayıt bulunamadı
        </div>
    }
</div>
@Html.Partial("/views/shared/_pager.cshtml",pager)

<!--end::Table-->
<script>
    $(document).on('click', '[event="ProfessionImageFormPopup"]', function (e) {
        e.preventDefault();

        var params = jQuery.parseJSON($(this).attr("params"));
        debugger;

        $.get("/Profession/ImageForm/" + params.id, function (data) {
            Swal.fire({
                html: data,
                showCloseButton: true,
                showConfirmButton: false,
                customClass: {
                    container: 'swal-container',
                    content: 'swal-content'
                },
                width: '50%',
                padding: '1rem',
                grow: 'fullscreen',
                position: 'top'
            });
        });

        $(document).on('click', '.swal-container .swal-close', function () {
            Swal.close();
        });
    });
</script>

